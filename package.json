  "style": "./dist/style.css",
  "files": [
    "dist"
  ],
  "keywords": [
    "lightweight",
    "simple",
    "reactjs",
    "react",
    "editor",
    "text-editor",
    "tailwind",
    "rich-text",
    "component",
    "teddy-editor",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yudono/teddy-editor.git"
  },
